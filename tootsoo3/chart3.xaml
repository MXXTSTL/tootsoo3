<UserControl x:Class="tootsoo3.chart3"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:tootsoo3"
         xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"

         mc:Ignorable="d" 
         d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Margin="0" Padding="15" CornerRadius="10" BorderBrush="#FFCCCCCC" BorderThickness="1" Background="#FFF9F9F9">
        </Border>

        <lvc:CartesianChart
x:Name="cartesianChart"
Series="{Binding Series}"
LegendPosition="Bottom"
LegendTextPaint="{Binding LegendPaint}" />

    </Grid>
</UserControl>
